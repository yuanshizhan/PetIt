<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/home_page"
    tools:context=".PetIt">

    <Button
        android:id="@+id/sign_up_button"
        android:background="#003663"
        android:text="Sign up"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="sign_up"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="150dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:height="70dp"
        android:background="#003663"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:id="@+id/continue_button"
        android:text="Continue"
        android:layout_alignBottom="@+id/sign_up_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/sign_up_button" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your name"
        android:textSize="25dp"
        android:textColor="#023866"

        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:id="@+id/please_text"
        android:layout_above="@+id/name_input"
        android:layout_centerHorizontal="true" />

    <EditText
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:hint="Your name here"
        android:textColorHint="#7491A3"
        android:textColor="#023866"
        android:layout_marginBottom="61dp"
        android:textSize="30dp"
        android:visibility="gone"
        android:id="@+id/name_input"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/sign_up_button">

    </EditText>

    <Button
        android:id="@+id/done_sign_up_button"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="Done"
        android:visibility="gone"
        android:textSize="25dp"
        android:background="#023866"
        android:textColor="#DCEEEE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
