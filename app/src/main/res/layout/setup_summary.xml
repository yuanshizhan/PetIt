<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setup_summary">

    <Button
        android:id="@+id/get_new_pet"
        android:textSize="25dp"
        android:background="#023866"
        android:textColor="#DCEEEE"
        android:text="Get a new Pet"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/check_points"
        android:layout_marginBottom="15dp"
        android:layout_alignLeft="@+id/check_points"
        android:layout_alignStart="@+id/check_points"/>
    <Button
        android:id="@+id/check_points"
        android:textSize="25dp"
        android:background="#023866"
        android:textColor="#DCEEEE"
        android:text="Check points"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/adoption"
        android:layout_marginBottom="15dp"
        android:layout_alignLeft="@+id/adoption"
        android:layout_alignStart="@+id/adoption" />
    <Button
        android:textSize="25dp"
        android:background="#023866"
        android:textColor="#DCEEEE"
        android:text="Put pet for adoption"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/adoption" />
</RelativeLayout>